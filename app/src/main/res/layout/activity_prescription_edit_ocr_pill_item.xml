<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/prescription_card_border"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/prescription_edit_pill_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="약 이름"
            android:fontFamily="@font/pt_sans_bold"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/prescription_edit_pill_item_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/pt_sans_bold"
            android:gravity="center"
            android:text="복용 일수"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/prescription_edit_pill_item_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="복용 횟수"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/pt_sans_bold"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/wake_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <CheckBox
                android:id="@+id/morning_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <CheckBox
                android:id="@+id/lunch_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <CheckBox
                android:id="@+id/dinner_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <CheckBox
                android:id="@+id/sleep_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>



</FrameLayout>