<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/group_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pt_sans_regular"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="처방전 수정"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prescription_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pt_sans_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/prescription_edit_edittext_name"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/group_member_edit_text_style"
                android:fontFamily="@font/pt_sans_bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/prescription_edit_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pt_sans_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="의료기관"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/prescription_edit_edittext_hospital"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/group_member_edit_text_style"
                android:fontFamily="@font/pt_sans_bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/prescription_registration_hospital_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pt_sans_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="전화번호"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/prescription_edit_edittext_hospital_phone"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/group_member_edit_text_style"
                android:fontFamily="@font/pt_sans_bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/prescription_edit_disease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/pt_sans_bold"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="질병코드"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/prescription_edit_edittext_disease"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/group_member_edit_text_style"
                android:fontFamily="@font/pt_sans_bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/prescription_edit_pill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pt_sans_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="약 정보"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="약 이름"
                    android:fontFamily="@font/pt_sans_bold"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/pt_sans_bold"
                    android:gravity="center"
                    android:text="복용 일수"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="복용 횟수"
                    android:fontFamily="@font/pt_sans_bold"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="복용 시기 \n 기상 후, 아침, 점심, 저녁, 자기 전"
                    android:fontFamily="@font/pt_sans_bold"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prescription_edit_pill_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            </LinearLayout>
            <Button
                android:id="@+id/prescription_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_bold"
                android:text="수정"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>