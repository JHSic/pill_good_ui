<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="background_name">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">#434343</item>
    </style>

    <style name="GroupMemberEditTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="GroupMemberTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="CustomSelectedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDeselectedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--  CameraResultActivity - Alert style  -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

</resources>