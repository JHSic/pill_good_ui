<!-- preview_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#80000000" /> <!-- 어둡고 반투명한 배경 색상 -->
    <corners android:radius="0dp" /> <!-- 사각형의 꼭지점을 라운드 처리하지 않음 -->
    <!--<padding
        android:bottom="@dimen/rectangle_height" /> &lt;!&ndash; rectangleView 영역을 제외하기 위한 padding 설정 &ndash;&gt;-->
    <size
        android:width="1dp"
        android:height="1dp" /> <!-- 최소한의 크기 설정 -->
    <gradient
        android:angle="0"
        android:endColor="@android:color/transparent"
        android:startColor="@android:color/transparent"
        android:type="linear" /> <!-- 그라디언트를 투명으로 설정하여 나머지 영역은 반투명하게 만듦 -->
    <exclude
        android:id="@+id/rectangleView"
        android:drawable="@drawable/rectangle_border" /> <!-- rectangleView 영역 제외 -->
</shape>
